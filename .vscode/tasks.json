{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Backend: Start Server",
      "type": "shell",
      "command": "source .venv/bin/activate && uvicorn src.main:app --reload --host 0.0.0.0 --port 8000",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false
      },
      "runOptions": {
        "runOn": "default"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Frontend: Start Dev Server",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": ".",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Starting the development server.*|^.*Compiling.*",
          "endsPattern": "^.*Compiled successfully.*|^.*webpack \\d+\\.\\d+\\.\\d+ compiled.*|^.*Local:.*http://localhost:3000.*"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "group": "development"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Frontend: Build Production",
      "type": "shell",
      "command": "npm run build",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": false
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "Python: Install Dependencies",
      "type": "shell",
      "command": "source .venv/bin/activate && uv sync --prerelease=allow",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Python: Run Tests",
      "type": "shell",
      "command": "source .venv/bin/activate && pytest -v",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Python: Format Code",
      "type": "shell",
      "command": "source .venv/bin/activate && black src/",
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "Python: Lint Code",
      "type": "shell",
      "command": "source .venv/bin/activate && ruff check src/",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Verify System",
      "type": "shell",
      "command": "./verify.sh",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      }
    },
    {
      "label": "Start All Services",
      "dependsOn": [
        "Backend: Start Server",
        "Frontend: Start Dev Server"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
